<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_minor">

    <TextView
            android:id="@+id/textview_rating_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.Philm.Movie.Detail.Rating.Description"/>

    <RatingBar
            android:id="@+id/ratingbar_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_minor"
            android:numStars="5"
            android:stepSize="0.5"
            style="?android:ratingBarStyle"/>

    <CheckBox
            android:id="@+id/checkbox_mark_watched"
            android:text="@string/movie_rate_mark_watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:visibility="gone" />

</LinearLayout>