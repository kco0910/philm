<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/movie_grid_item_height"
             android:foreground="?android:attr/activatedBackgroundIndicator">

    <app.philm.in.view.PhilmImageView
            android:id="@+id/imageview_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    <app.philm.in.view.FontTextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.Philm.Movie.Grid.Title" />

</FrameLayout>